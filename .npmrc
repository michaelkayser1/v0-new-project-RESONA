# Use pnpm for package management
package-manager=pnpm

# Ensure exact versions for reproducible builds
save-exact=true

# Use the public npm registry
registry=https://registry.npmjs.org/

# Disable package-lock.json since we're using pnpm
package-lock=false

# Enable hoisting for better performance
hoist-pattern[]=*

# Shamefully hoist to avoid module resolution issues
shamefully-hoist=true

# Auto install peer dependencies
auto-install-peers=true

# Strict peer dependencies
strict-peer-dependencies=false
